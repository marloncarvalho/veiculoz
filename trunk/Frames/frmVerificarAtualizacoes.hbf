Private Sub ProcessText(ByRef objData As Stream, ByVal lSize As Long, ByRef sFile As String)
	Dim s As String
	Read objdata, s[lSize]
	Call Process(s)
End Sub

Private Sub Process(Text As String)
	Me.Label1.Caption = "OK"
	Me.Label2.Caption = "Conectado..."
	If Text <> Versao Then
		Me.lblInforma.Caption = "Nova Versão Disponível"
	Else
		Me.lblInforma.Caption = "Sem Versão Disponível"
	End If
	Me.lblInforma.Visible = True
	Exit Sub
	Erro:
		MsgBox "Não foi possível obter informações sobre atualizações."
End Sub

