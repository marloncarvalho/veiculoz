Dim DbCarros As pvHbVeiculos
Dim DbPostos As pvHbPostos
Dim DbAbaste As pvHbAbastecimentos
Dim DbTiposC As pvHbTiposCombustiveis

Private Sub Form_Load()
	Set DbAbaste = Factory.ObterDaoAbastecimento().Database()
	Set DbCarros = Factory.ObterDaoCarro().Database()
	Set DbPostos = Factory.ObterDaoPosto().Database()
	Set DbTiposC = Factory.ObterDaoTipoCombustivel().Database()
	DbCarros.MoveFirst
	While Not DbCarros.EOF
		Me.popCarros.AddItem DbCarros.Modelo,DbCarros.UniqueID
		DbCarros.MoveNext
	Wend
	DbPostos.MoveFirst
	While Not DbPostos.EOF
		Me.popPosto.AddItem DbPostos.Nome,DbPostos.UniqueID
		DbPostos.MoveNext
	Wend
	Me.slcDataInicial.Date = Now()
	Me.slcDataFinal.Date = Now()
End Sub

Private Sub btnPesquisar_Click()
	If Me.popCarros.ListIndex = -1 Then
		MsgBox "Selecione um Carro."
		Exit Sub
	End If
	If Me.popPosto.ListIndex = -1 Then
		MsgBox "Selecione um Posto."
		Exit Sub
	End If
	Dim Sql As String
	Sql = " AND IdCarro=" & Me.popCarros.ItemData(Me.popCarros.ListIndex) & " AND IdPosto=" & Me.popPosto.ItemData(Me.popPosto.ListIndex)
	DbAbaste.OpenRecordset "Data>='" & CStr(Me.slcDataInicial.Date) & "' AND Data<='" & CStr(Me.slcDataFinal.Date) & "'" & Sql,hbModeOpenAlways
	Dim Total as Double
	Total = 0
	While Not DbAbaste.EOF
		Total = Total + DbAbaste.ValorTotal
		DbAbaste.MoveNext
	Wend
	DbAbaste.MoveFirst
	Me.lblTotal.Caption = "R$ " & Total
	Me.gridAbastecimentos.Populate DbAbaste
End Sub

Private Sub gridAbastecimentos_LoadItem(ByVal iRow As Integer, ByVal lItemData As Long, ByVal vValue() As Variant)
	DbAbaste.LookupUniqueID lItemData
	DbTiposC.LookupUniqueID DbAbaste.IdTipoComb
	vValue(0) = DbTiposC.Nome
	vValue(1) = DbAbaste.ValorTotal
	vValue(2) = DbAbaste.ValorLitro
End Sub

