Private Sub Form_Load()
	Dim Colecao As Collection
	Dim Posto As clsPosto
	Set Colecao = Factory.ObterDaoPosto().ObterPostos()
	For Each Posto In Colecao
		Call gridPostos.AddItem(Posto.Id)
	Next
End Sub


Private Sub gridPostos_LoadItem(ByVal iRow As Integer, ByVal lItemData As Long, ByVal vValue() As Variant)
	Dim Posto As clsPosto
	Set Posto = Factory.ObterDaoPosto().ObterPosto(lItemData)
	vValue(0) = Posto.Nome
	vValue(1) = Posto.Distribuidora
End Sub


Private Sub gridPostos_Click(ByVal iRow As Integer, ByVal iCol As Integer, ByVal lItemData As Long)
	Dim Posto As clsPosto
	Set Posto = Factory.ObterDaoPosto().ObterPosto(lItemData)
	Dim frm As New frmManterPosto
	frm.bNew = False
	frm.IdEdicao = Posto.Id
	frm.Show hbFormModeless+hbFormGoto
End Sub


Private Sub btnNovo_Click()
	Dim frm As New frmManterPosto
	frm.bNew = True
	frm.Show hbFormModeless+hbFormGoto
End Sub


Private Sub btnVoltar_Click()
	Dim frm As New frmMain
	frm.Show hbFormModeless+hbFormGoto
End Sub
