Public bNew as Boolean

Private Function Validar() As Boolean
	If Me.fldNome.Text = "" Then
		MsgBox "Preencha Corretamente o Campo Nome."
		Validar = False
		Exit Function
	End If
	If Me.fldDistrib.Text = "" Then
		MsgBox "Preencha Corretamente o Campo Distribuidora."
		Validar = False
		Exit Function
	End If
	Validar = True
End Function

Private Sub btnOk_Click()
	If Validar() Then
		If Me.bNew Then
			DbPostos.AddNew
		Else
			DbPostos.Edit
		End If
			DbPostos.Nome = Me.fldNome.Text
			DbPostos.Rua = Me.fldRua.Text
			DbPostos.Bairro = Me.fldBairro.Text
			DbPostos.Estado = Me.fldEstado.Text
			DbPostos.Cidade = Me.fldCidade.Text
			DbPostos.Distribuidora = Me.fldDistrib.Text
			DbPostos.Update
			Dim frm As New frmPostos
			frm.Show hbFormModeless+hbFormGoto
		End If
End Sub


Private Sub Form_Load()
	If Not Me.bNew Then
		Me.fldNome.Text = DbPostos.Nome
		Me.fldRua.Text = DbPostos.Rua
		Me.fldBairro.Text = DbPostos.Bairro
		Me.fldEstado.Text = DbPostos.Estado
		Me.fldCidade.Text = DbPostos.Cidade
		Me.fldDistrib.Text = DbPostos.Distribuidora
	End If
End Sub


Private Sub btnCancelar_Click()
		Dim frm As New frmPostos
		frm.Show hbFormModeless+hbFormGoto
End Sub

Private Sub btnExcluir_Click()
	If Not Me.bNew Then
		Dim Db As New pvHbAbastecimentos
		Db.OpenRecordset "IdPosto="&	DbPostos.UniqueID,hbModeOpenAlways+hbModeReadOnly
		If Db.RecordCount > 0 Then
			MsgBox "Posto não pode ser excluído, pois existem abastecimentos."
		Else
			DbPostos.Delete hbRecordRemove
			Me.btnCancelar_Click
		End If
	Else
		MsgBox "Não é possível excluir um Posto ainda não criado."
	End If
End Sub
