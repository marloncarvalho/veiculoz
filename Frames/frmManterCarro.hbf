Public bNew As Boolean
Public IdEdicao As Long

Private Sub btnOk_Click()
	If Me.Validar() Then
		Dim Carro As New clsCarro
		Carro.Id = Me.IdEdicao
		Carro.Ano = Me.fldAno.Text
		Carro.Modelo = Me.fldModelo.Text
		Carro.Marca = Me.fldMarca.Text
		Carro.Placa = Me.fldPlaca.Text
		Carro.Renavam = Me.fldRenavam.Text
		Carro.Cor = Me.fldCor.Text
		Factory.ObterDaoCarro().ManterCarro(Carro)
		Dim frm As New frmCarros
		frm.Show hbFormModeless+hbFormGoto
	End If
End Sub

Private Sub btnCancelar_Click()
	Dim frm As New frmCarros
	frm.Show hbFormModeless+hbFormGoto
End Sub

Private Sub Form_Load()
	If Not Me.bNew And Not IsEmpty(Me.IdEdicao) Then
		Dim Carro As clsCarro
		Set Carro = Factory.ObterDaoCarro().ObterCarro(Me.IdEdicao)
		Me.fldAno.Text = Carro.Ano
		Me.fldModelo.Text = Carro.Modelo
		Me.fldMarca.Text = Carro.Marca
		Me.fldPlaca.Text = Carro.Placa
		Me.fldRenavam.Text = Carro.Renavam
		Me.fldCor.Text = Carro.Cor
	End If
End Sub

Private Sub btnExcluir_Click()
	If Not Me.bNew Then
		Try
			Factory.ObterDaoCarro().ExcluirCarro(Me.IdEdicao)
			Me.btnCancelar_Click
		Catch
			Err.MsgBox
		End Catch
	Else
		MsgBox "Não é possível excluir um Carro ainda não criado."
	End If
End Sub


Private Function Validar() As Boolean
	If Me.fldModelo.Text = "" Then
		MsgBox "Preencha Corretamente o Campo Modelo."
		Validar = False
		Exit Function
	End If
	If Me.fldAno.Text = "" Then
		MsgBox "Preencha Corretamente o Campo Ano."
		Validar = False
		Exit Function
	End If
	If Me.fldMarca.Text = "" Then
		MsgBox "Preencha Corretamente o Campo Marca."
		Validar = False
		Exit Function
	End If
	If Me.fldAno.Text = "" Then
		MsgBox "Preencha Corretamente o Campo Placa."
		Validar = False
		Exit Function
	End If
	Validar = True
End Function
